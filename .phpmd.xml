<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="php-qbittorrent"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema_1_0_0.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema_1_0_0.xsd">

    <description>php-qbittorrent PHPMD ruleset</description>

    <!-- Clean Code Rules -->
    <rule ref="rulesets/cleancode.xml">
        <!-- Excluded rules -->
        <exclude name="ElseExpression"/>
        <exclude name="StaticAccess"/>
    </rule>

    <!-- Code Size Rules -->
    <rule ref="rulesets/codesize.xml">
        <!-- Excluded rules -->
        <exclude name="CyclomaticComplexity"/>
        <exclude name="NPathComplexity"/>
        <exclude name="TooManyPublicMethods"/>
    </rule>

    <!-- Controversial Rules -->
    <rule ref="rulesets/controversial.xml/Superglobals">
        <properties>
            <property name="allow" value="$_SERVER, $_POST, $_GET, $_COOKIE, $_FILES"/>
        </properties>
    </rule>

    <!-- Design Rules -->
    <rule ref="rulesets/design.xml">
        <!-- Excluded rules -->
        <exclude name="CouplingBetweenObjects"/>
        <exclude name="NumberOfChildren"/>
        <exclude name="DepthOfInheritance"/>
    </rule>

    <!-- Naming Rules -->
    <rule ref="rulesets/naming.xml">
        <!-- Excluded rules -->
        <exclude name="ShortVariable"/>
        <exclude name="LongVariable"/>
    </rule>

    <!-- Unused Code Rules -->
    <rule ref="rulesets/unusedcode.xml"/>

    <!-- Custom rules -->
    <rule name="MethodArgumentIsRequiredCamelCase"
          since="0.1.0"
          message="Method argument {0} must be in camelCase"
          class="PHPMD\Rule\Naming\ShortVariable">
        <description>
            Method argument {0} must be in camelCase.
        </description>
        <priority>1</priority>
        <properties>
            <property name="exceptions" value=""/>
            <property name="max" value="3"/>
        </properties>
    </rule>

</ruleset>