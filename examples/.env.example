# qBittorrent API配置示例
# 复制此文件为 .env 并填入实际值

# 基础连接配置
QBITTORRENT_BASE_URL=http://localhost:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# 超时配置（秒）
QBITTORRENT_TIMEOUT=30
QBITTORRENT_CONNECT_TIMEOUT=10

# 重试配置
QBITTORRENT_RETRY_ATTEMPTS=3
QBITTORRENT_RETRY_DELAY=1000

# SSL配置
QBITTORRENT_VERIFY_SSL=false

# 调试和日志
QBITTORRENT_DEBUG=false
QBITTORRENT_LOG_REQUESTS=false
QBITTORRENT_LOG_RESPONSES=false

# 自动登录/登出
QBITTORRENT_AUTO_LOGIN=true
QBITTORRENT_AUTO_LOGOUT=true

# 缓存配置
QBITTORRENT_CACHE_ENABLED=false
QBITTORRENT_CACHE_TTL=300

# HTTP配置
QBITTORRENT_USER_AGENT=php-qbittorrent/2.0
QBITTORRENT_FOLLOW_REDIRECTS=true
QBITTORRENT_MAX_REDIRECTS=5