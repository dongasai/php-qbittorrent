{
    "name": "dongasai/php-qbittorrent",
    "type": "library",
    "description": "Modern PHP library for qBittorrent Web API v4.1+",
    "keywords": [
        "qbittorrent",
        "torrent",
        "api",
        "client",
        "bittorrent",
        "download"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dongasai",
            "email": "dongasai@example.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6|^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.20",
        "nyholm/psr7": "^1.8",
        "guzzlehttp/guzzle": "^7.8",
        "phpmd/phpmd": "^2.13",
        "vimeo/psalm": "^5.15"
    },
    "autoload": {
        "psr-4": {
            "PhpQbittorrent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpQbittorrent\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=9",
        "phpcs": "php-cs-fixer fix --verbose --diff",
        "phpcs-check": "php-cs-fixer fix --verbose --diff --dry-run",
        "phpmd": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
        "quality": [
            "@phpcs-check",
            "@phpstan",
            "@phpmd",
            "@test"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "provide": {
        "psr/http-client-implementation": "1.0"
    }
}